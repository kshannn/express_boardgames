{{#extends 'base'}}

{{#block 'content'}}

    <div class="container-fluid" id="mainSection">
    {{!-- search forms --}}
        <section id="searchSection">
            <h2>Filter</h2>
            <form method="GET">
                {{{form}}}
                <button class="btn btn-primary">Search</button>
            </form>
        </section>

        {{!-- owned listings --}}
        <section id="displaySection">
            <div id="listingHeader">
                 <h1>Your Products</h1><a href="/listings/create" class="btn">Add Product</a>
            </div>
            <hr></hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date Posted</th>
                        <th>Vendor ID</th>
                        <th>Name</th>
                        <th>Stock</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each gameListings}}
                    <tr>
                        <td>
                            {{moment this.posted_date 'LLL'}}
                        </td>
                        <td>
                            {{this.vendor_id}}
                        </td>
                        <td>
                            {{this.name}}
                        </td>
                        <td>
                            {{this.stock}}
                        </td>
                        <td>
                            <a href='/listings/{{this.id}}/update' class="btn btn-primary btn-small">Edit</a>
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>


{{/block}}

{{/extends}}