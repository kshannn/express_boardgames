<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    {{!-- FontAwesome --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> 

    {{!-- Custom CSS --}}
    <link href="/styles.css" rel="stylesheet" type="text/css" />

    <title>Board Games Shop</title>
  </head>
  <body>
     

        {{!-- nav bar --}}
        <nav class="navbar navbar-expand-lg navbar-dark">
          <div class="container-fluid position-relative">
            <a class="navbar-brand" href="/">
              <div id="logoContainer"></div>
            </a>

            <div class="ms-auto userIconContainer">
               {{#if vendor}}
               
                <div class="nav-item dropdown">
                    <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      <div class="userIcon">
                        <i class="fas fa-user-circle"></i> {{vendor.username}}
                      </div>
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <li><a href="/auth/profile" class="dropdown-item">Your Profile</a></li>
                    </ul>
                  </div>

                 {{else}}
                  <div class="userIcon">
                    <i class="fas fa-user-circle"></i>Guest
                  </div>
                {{/if}}
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-lg-0">
                <li class="nav-item">
                  <a id="homeBtn" class="nav-link" aria-current="page" href="/listings">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/orders">Orders</a>
                </li>
              </ul>
              <div>
                {{#if vendor}}
    
                <div class="logInOut" class="nav-item">
                  <a href="/logout" class="navLoginLogout">Logout</a>   
                </div>
                               
                  {{else}}
           
                  <div class="logInOut" class="nav-item">
                    <a href="/" class="navLoginLogout">Login</a>
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        </nav>

        {{!-- flash messages --}}
        {{#if success_messages}}
          {{#each success_messages}}
            <div class="alert alert-success">
              {{this}}
            </div>
          {{/each}}
        {{/if}}

        {{#if error_messages}}
          {{#each error_messages}}
            <div class="alert alert-danger">
              {{this}}
            </div>
          {{/each}}
        {{/if}}
        
        
        {{!-- body --}}
        {{#block 'content'}}{{/block}}
        
     

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    {{#block 'js'}}{{/block}}
  </body>
</html>