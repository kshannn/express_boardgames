{{#extends 'base'}}

{{#block 'content'}}
<h1>Displaying Order {{order.id}}</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>GameListing Id</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit Price</th>

        </tr>
    </thead>
    <tbody>
        {{#each orderItems}}
        <tr>
            <td>
                {{this.order_id}}
            </td>
            <td>
                {{this.gameListing_id}}
            </td>
            <td>
                {{this.gameListing.name}}
            </td>
            <td>
                {{this.quantity}}
            </td>
            <td>
                {{this.unit_price}}
            </td>
         
        </tr>

        {{/each}}
    </tbody>
</table>


{{/block}}

{{/extends}}